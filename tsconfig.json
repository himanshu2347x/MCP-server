{
  "compilerOptions": {

    "rootDir": "./src",
    "outDir": "./build",


    "target": "ES2022",
    "lib": ["ES2022"],

    /* Module system */
    "module": "Node16",
    "moduleResolution": "Node16",


    "types": ["node"],

    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

 
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
